{
  "$schema": "https://biomejs.dev/schemas/2.3.6/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!node_modules", "!.next", "!dist", "!build", "!samples"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 160
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "single",
      "quoteStyle": "single",
      "trailingCommas": "es5"
    }
  },
  "linter": {
    "domains": {
      "project": "recommended",
      "react": "recommended"
    },
    "enabled": true,
    "rules": {
      "a11y": {
        "noStaticElementInteractions": "off",
        "useKeyWithClickEvents": "off"
      },
      "correctness": {
        "noUnusedImports": {
          "fix": "safe",
          "level": "warn",
          "options": {}
        },
        "useExhaustiveDependencies": {
          "level": "warn",
          "options": {
            "hooks": [
              {
                "name": "useRenderControls",
                "stableResult": ["controlsRef", "setControls"]
              },
              {
                "name": "useSimControls",
                "stableResult": ["setControls", "controlsRef", "commandsRef"]
              },
              {
                "name": "useSimulation",
                "stableResult": ["simulationRef", "stepTimesRef"]
              },
              {
                "name": "useTheme",
                "stableResult": ["setTheme", "themeRef", "themeDarkRef"]
              },
              {
                "name": "useTool",
                "stableResult": ["setActiveTool", "activeToolRef"]
              },
              {
                "name": "useMenu",
                "stableResult": ["triggerRef", "menuRef", "stateRef"]
              },
              {
                "name": "useToolTip",
                "stableResult": ["settingsRef"]
              },
              {
                "name": "useModal",
                "stableResult": ["triggerRef", "modalRef", "stateRef"]
              }
            ],
            "reportMissingDependenciesArray": true
          }
        }
      },
      "recommended": true,
      "suspicious": {
        "noAsyncPromiseExecutor": "error",
        "noConsole": "off",
        "noEmptyBlock": "warn",
        "noEmptyBlockStatements": "warn",
        "useAwait": "error"
      }
    }
  },
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  }
}
